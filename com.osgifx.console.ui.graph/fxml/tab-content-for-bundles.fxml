<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.CheckListView?>
<?import org.controlsfx.control.SegmentedButton?>
<?import org.controlsfx.glyphfont.Glyph?>

<SplitPane dividerPositions="0.27728285077951004" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.osgifx.console.ui.graph.GraphFxBundleController">
   <items>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <BorderPane prefHeight="49.0" prefWidth="248.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <left>
                  <SegmentedButton fx:id="strategyButton" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" top="5.0" />
                     </BorderPane.margin>
                     <buttons>
                     	<ToggleButton fx:id="circularStrategyButton" selected="true" text="Circular" />
                     	<ToggleButton fx:id="randomStrategyButton" text="Random" />
                     </buttons>
                   </SegmentedButton>
               </left>
               <right>
                  <Button mnemonicParsing="false" onAction="#generateGraph" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="5.0" top="5.0" />
                     </BorderPane.margin>
                     <graphic>
        				<Glyph fontFamily="FontAwesome" icon="PLAY" />
    				 </graphic>
                  </Button>
               </right>
               <center>
                  <Button mnemonicParsing="false" onAction="#deselectAll" prefHeight="27.0" prefWidth="118.0" text="Deselect All" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </Button>
               </center>
               <bottom>
                  <ChoiceBox fx:id="wiringSelection" prefWidth="329.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </BorderPane.margin>
                  </ChoiceBox>
               </bottom>
            </BorderPane>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <CheckListView fx:id="bundlesList" prefHeight="498.0" prefWidth="245.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                  <TextField fx:id="searchText" prefHeight="30.0" prefWidth="329.0" promptText="Search Filter" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </BorderPane.margin></TextField>
               </top>
            </BorderPane>
         </center>
      </BorderPane>
      <BorderPane fx:id="graphPane" />
   </items>
</SplitPane>
