<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<BorderPane fx:id="rootPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.osgifx.console.ui.logs.LogConfigurationEditorFxController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="saveLogConfigButton" mnemonicParsing="false">
           	   <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <graphic>
        		  <Glyph fontFamily="FontAwesome" icon="FLOPPY_ALT" />
    		   </graphic>
    		   <tooltip><Tooltip text="Save Log Configuration" /></tooltip>
            </Button>
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false">
               <graphic>
        		  <Glyph fontFamily="FontAwesome" icon="CLOSE" />
    		   </graphic>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <tooltip><Tooltip text="Cancel" /></tooltip>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
