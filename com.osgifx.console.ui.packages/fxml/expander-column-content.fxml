<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.controlsfx.control.ToggleSwitch?>

<GridPane hgap="20.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" vgap="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.osgifx.console.ui.packages.PackageDetailsFxController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="70.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="NEVER" />
    <RowConstraints minHeight="10.0" vgrow="NEVER" />
    <RowConstraints minHeight="10.0" vgrow="NEVER" />
    <RowConstraints minHeight="200.0" vgrow="ALWAYS" />
    <RowConstraints minHeight="200.0" vgrow="ALWAYS" />
  </rowConstraints>
   <children>
      <Label style="-fx-font-weight: bold;" text="Name" GridPane.halignment="RIGHT" />
      <Label fx:id="nameLabel" text="Label" GridPane.columnIndex="1" />
      
      <Label style="-fx-font-weight: bold;" text="Version" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
      <Label fx:id="versionLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
      <Label style="-fx-font-weight: bold;" text="Is Duplicate Export?" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <ToggleSwitch fx:id="duplicateLabel" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
      <Label style="-fx-font-weight: bold;" text="Exporters" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="TOP" />
      <TableView fx:id="exportersTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
      	<placeholder>
        	<Label text="No exporter bundle" />
    	</placeholder>
        <columns>
          <TableColumn fx:id="exportersTableIdColumn" prefWidth="110.0" text="ID" />
          <TableColumn fx:id="exportersTableBsnColumn" prefWidth="435.0" text="Symbolic Name" />
        </columns>
      </TableView>
      
      <Label style="-fx-font-weight: bold;" text="Importers" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="TOP" />
      <TableView fx:id="importersTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS">
      	<placeholder>
        	<Label text="No importer bundle" />
    	</placeholder>
        <columns>
          <TableColumn fx:id="importersTableIdColumn" prefWidth="110.0" text="ID" />
          <TableColumn fx:id="importersTableBsnColumn" prefWidth="435.0" text="Symbolic Name" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
