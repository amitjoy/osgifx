<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.osgifx.console.ui.mcp.McpFxController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="actionButton" mnemonicParsing="false" text="Start MCP Server" />
            <Button fx:id="refreshLogsButton" mnemonicParsing="false" onAction="#refreshLogs" text="Refresh Logs" />
            <Button fx:id="clearLogsButton" mnemonicParsing="false" onAction="#clearLogs" text="Clear Logs" />
            <Label fx:id="statusLabel" text="Status: STOPPED" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Tools">
               <content>
                  <TableView fx:id="toolsTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Tool Name" />
                      <TableColumn fx:id="descriptionColumn" prefWidth="400.0" text="Description" />
                        <TableColumn fx:id="schemaColumn" prefWidth="300.0" text="Input Schema" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
          </Tab>
          <Tab text="Logs">
               <content>
                  <TableView fx:id="logsTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="timestampColumn" prefWidth="150.0" text="Timestamp" />
                      <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="contentColumn" prefWidth="600.0" text="Content" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
