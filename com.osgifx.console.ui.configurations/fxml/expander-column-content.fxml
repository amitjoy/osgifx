<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import org.controlsfx.glyphfont.Glyph?>

<BorderPane fx:id="rootPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.osgifx.console.ui.configurations.ConfigurationEditorFxController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="deleteConfigButton" mnemonicParsing="false" style="-fx-base: #ff6b6b;" text="Delete">
               <graphic>
        		  <Glyph fontFamily="FontAwesome" icon="TRASH" />
    		   </graphic>
               <tooltip><Tooltip text="Delete Configuration" /></tooltip>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel">
               <graphic>
        		  <Glyph fontFamily="FontAwesome" icon="CLOSE" />
    		   </graphic>
               <tooltip><Tooltip text="Cancel" /></tooltip>
            </Button>
            <Button fx:id="saveConfigButton" defaultButton="true" mnemonicParsing="false" style="-fx-base: #4caf50;" text="Save">
               <graphic>
        		  <Glyph fontFamily="FontAwesome" icon="FLOPPY_ALT" />
    		   </graphic>
    		   <tooltip><Tooltip text="Save Configuration" /></tooltip>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
