<SplitPane dividerPositions="0.23329621380846324" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.osgifx.console.ui.healthchecks.HealthCheckFxController">
   <items>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <VBox spacing="5.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <SegmentedButton fx:id="hcTypeButton">
                           <buttons>
                           	<ToggleButton fx:id="nameHcButton" selected="true" text="Names" />
                           	<ToggleButton fx:id="tagHcButton" text="Tags" />
                           </buttons>
                        </SegmentedButton>
                        <Button fx:id="deselectAllButton" mnemonicParsing="false" onAction="#deselectAll" text="Deselect All" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="executeHcButton" mnemonicParsing="false" onAction="#executeHc" prefHeight="27.0" prefWidth="17.0">
                           <graphic>
              				<Glyph fontFamily="FontAwesome" icon="PLAY" />
          				 </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <CheckListView fx:id="hcMetadataList" prefHeight="514.0" prefWidth="232.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                  <TextField fx:id="searchText" maxWidth="1.7976931348623157E308" prefHeight="30.0" promptText="Search Filter" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </BorderPane.margin></TextField>
               </top>
            </BorderPane>
         </center>
      </BorderPane>
      <BorderPane fx:id="hcResultArea" />
   </items>
</SplitPane>
